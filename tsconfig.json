{
    "compilerOptions": {
        "typeRoots": ["./node_modules/@types", "./@types"],
        "types": ["./node_modules/@ragempcommunity/types-server", "./node_modules/@ragempcommunity/types-client", "./node_modules/@ragempcommunity/types-cef"],

        "baseUrl": ".",
        "removeComments": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "esNext",
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "esNext",
        "outDir": ".",
        "importHelpers": true,
        "rootDir": ".",
        "allowSyntheticDefaultImports": true,
        "declaration": false
    },

    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "packages", "**/*.json"]
}
